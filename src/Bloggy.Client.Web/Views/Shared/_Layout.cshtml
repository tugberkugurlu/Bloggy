<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="alternate" type="application/rss+xml" title="Tugberk Ugurlu&#39;s Blog" href="@Url.Action("rss", "feeds")" />
    <link rel="alternate" type="application/rss+xml" title="Tugberk Ugurlu&#39;s Blog (On FeedBurner)" href="http://feeds.feedburner.com/TugberkUgurlu" />
    @Styles.Render("~/Content/css")
</head>
<body itemscope itemtype="http://schema.org/WebPage">
    @Html.Partial("_TopHeaderPartial")
    <div role="main" class="container" id="main">
        <div class="row">
            <div id="content" class="col-xs-12 col-sm-9">
                @RenderBody()
            </div>
            <div id="side" class="col-xs-6 col-sm-3 sidebar-offcanvas" style="padding-left:25px;">
                @Html.Partial("_RightSidePartial")
            </div>
        </div>
        <ul class="pager">
            <li class="previous disabled"><a href="#">← Older</a></li>
            <li class="next"><a href="#">Newer →</a></li>
        </ul>
        <div class="navbar-collapse collapse navbar-inverse-collapse" style="">
            <ul class="navbar-nav nav-custom">
                <li><a href="#">&copy; @DateTime.Now.Year - XOMNI Inc. &copy;</a></li>
                <li><a href="#">Privacy Policy</a></li>
                <li><a href="#">Creative Commons Licence</a></li>
            </ul>
            <ul class="nav-custom navbar-nav navbar-right">
                <li><a href="#">&copy; @DateTime.Now.Year - Bloggy &copy;</a></li>
            </ul>
        </div>
    </div>
    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>