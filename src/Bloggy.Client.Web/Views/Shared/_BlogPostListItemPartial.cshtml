@model Bloggy.Client.Web.Models.BlogPostModelLight      
<div class="blog-post-item">
    <div class="row head">
        <div class="col-sm-12">
            <h2 class="title">
                <a href="@Url.Action("Index", "BlogPost", new { slug = Model.Slug })">@Model.Title</a>
            </h2>
            <div class="text-info text-info-custom">
                @Model.BriefInfo
            </div>
            <div class="row misc">
                <div class="col-sm-4 misc-item">
                    <i class="glyphicon glyphicon-calendar"></i> @Model.CreatedOn.ToString("yyyy-MM-dd HH:mm")
                </div>
                <div class="col-sm-4 misc-item">
                    <i class="glyphicon glyphicon-user"></i> Tugberk Ugurlu
                </div>
                <div class="col-sm-4 misc-item">
                    @* Comments Count *@
                </div>
            </div>
            <div class="row tags">
                <div class="col-sm-12">
                    <ul class="none-style-list inline-list">
                        @foreach (var tag in Model.Tags)
                        {
                            <li>
                                <span class="label label-info tag-label">
                                    <a href="@Url.Action("index", "tags", new { slug = tag.Slug })">
                                        @tag.Name
                                    </a>
                                </span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-sm-12">
            @Html.Raw(Model.Content)
        </div>
    </div>
</div>