@model Bloggy.Client.Web.Models.BlogPostModelLight
<div class="row blog-post-list-item">
    <div class="span9 item-header">
        <h4 class="title">
            <a href="#">
                <strong>@Model.Title</strong>
            </a>
        </h4>
        <div class="text-info text-info-custom">
            Learn how easy to scale out SignalR with a Redis backplane and simulate a local web farm scenario with IIS Express
        </div>
        <div class="misc">
                <div class="well well-sm well-sm-custom">
                    2013-09-23 15:45, Tugberk Ugurlu
                    <div class="span5 misc-item" style="float:right;">
                        <span class="label label-default">SignalR</span>
                        <span class="label label-default">Redis</span>
                        <span class="label label-default">ASP.NET</span>
                        <span class="label label-default">ASP.NET Web API</span>
                    </div>
                </div>
                
